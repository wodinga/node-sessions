extends layout

block content
    .container
      form.form-signin(name='login', method='post')
        h2.form-signin-heading Please sign in
        label.sr-only(for='inputEmail') Email address
        input#inputEmail.form-control(name='email', type='email', placeholder='Email address', required='', autofocus='')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(name='password', type='password', placeholder='Password', required='')
        .checkbox
          label
            input(name='rememberme', type='checkbox', value='remember-me') 
            Remember Me
        button.btn.btn-lg.btn-primary.btn-block(type='submit', name = 'button') Sign in
    // /container

